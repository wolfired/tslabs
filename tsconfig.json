{
    "compilerOptions": {
        "declaration": false,
        "experimentalDecorators": true,
        "inlineSourceMap": false,
        "inlineSources": false,
        // "mapRoot": "http://localhost/",//PATH or URL
        "maxNodeModuleJsDepth": 1,
        "module": "amd",
        "noEmit": false,
        "noEmitOnError": false,
        "noFallthroughCasesInSwitch": false,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitUseStrict": false,
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "outDir": "./debug",
        // "outFile": "",
        "preserveConstEnums": false,
        "pretty": true,
        "removeComments": false,
        "rootDir": "./src",
        "sourceMap": false,
        // "sourceRoot": "http://localhost/",//PATH or URL
        "strictNullChecks": true,
        "target": "es2015"
    },
    "exclude": [
        "debug",
        "release"
    ]
}